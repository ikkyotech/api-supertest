#!/usr/bin/env node
'use strict'
const opts = require('yargs')
  .option('spec', {
    type: 'string',
    default: './spec'
  })
  .option('cwd', {
    type: 'string',
    default: process.cwd()
  })
  .option('dotEnv', {
    default: 'false'
  })
  .coerce('dotEnv', opt => {
    if (/^\s*(true|false)\s*$/i.test(opt)) {
      return Boolean(opt)
    }
    return opt
  })
  .help()
  .argv

console.log(opts)

require('../lib/cli').run(opts, function (error, isSuccess) {
  if (error) {
    console.error(error.stack || error)
  }
  process.exit(isSuccess && !error ? 0 : 1)
})
